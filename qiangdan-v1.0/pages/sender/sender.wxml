<view class="senderLi flex-wrp" style="flex-direction:row;">
  <view>真实姓名：</view>
  <input placeholder='请输入真实姓名' placeholder-class="placeholder " bindinput="realname"/>
</view>
<view class="senderLi flex-wrp" style="flex-direction:row;">
  <view>身份证号：</view>
  <input  type="idcard" placeholder='请输入身份证号'bindinput="card" placeholder-class="placeholder "/>
</view>
<view class="senderLi flex-wrp" style="flex-direction:row;">
  <view>手机号码：</view>
  <input  type="idcard" placeholder='请输入手机号码' placeholder-class="placeholder "bindinput="tel" />
</view>
<view class="senderLi flex-wrp" style="flex-direction:row;">
  <view>紧急手机号码：</view>
  <input  type="idcard" placeholder='请输入手机号码' placeholder-class="placeholder "bindinput="ji_tel" />
</view>
<view class="senderLi flex-wrp" style="flex-direction:row;">
  <view>提现银行卡号：</view>
  <input  type="idcard" placeholder='请输入银行卡号' placeholder-class="placeholder "bindinput="cards" /> 
</view>
<view class="senderLi flex-wrp" style="flex-direction:row;">
  <view>提现银行名称：</view>
  <input   placeholder='请输入银行名称' placeholder-class="placeholder "bindinput="bankName" />
</view>

<view class="senderLi ">
  <view>身份证照：</view>
  <view class='idCard flex-wrp' style="flex-direction:row;">
    <view class='cardLi' bindtap='ZMImage'>
      <image src=" {{ZM}}" mode='widthFix'/>
      <text>正面</text>
    </view>
    <view class='cardLi' bindtap='FMImage'>
      <image src="{{FM}}" mode='widthFix'/>
      <text>反面</text>
    </view>
  </view> 
</view>



<button type="primary" class='sureBtn' bindtap='sureBtn'>提交认证</button>