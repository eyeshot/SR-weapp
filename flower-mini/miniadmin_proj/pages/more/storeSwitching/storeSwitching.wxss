.weui-cell__bd {
    position: relative;
    display: flex;
    justify-content: space-between;
    height: 70rpx;
    line-height: 70rpx;
}

.weui-cell__bd wx-image {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 70rpx;
    height: 70rpx;
}

.weui-cell__bd wx-text {
    margin-left: 102rpx;
    line-height: 70rpx;
    color: #292426;
    font-size: 30rpx;
}

.noshopid {
    padding: 20rpx;
    line-height: 60rpx;
    font-size: 26rpx;
}

.centertitle {
    margin: 0 auto;
    margin-top: 30rpx;
}

.centertitle wx-view {
    text-align: left;
}

.centertitle .titleimg {
    width: 100%;
    line-height: 44rpx;
}

.centertitle .titleimg wx-text {
    color: red;
}

.centertitle wx-image {
    display: block;
    margin: 0 auto;
}

.centertitle .center {
    text-align: center;
    border-radius: 50%;
    width: 60rpx;
    height: 60rpx;
    line-height: 60rpx;
    color: #fff;
    border: 0;
    padding: 0;
    background-color: #ff4a36;
}

.jian {
    height: 310rpx;
}

.line {
    margin-top: 80rpx;
    margin-bottom: 80rpx;
    width: 100%;
    position: relative;
    left: 0;
    right: 0;
    height: 1px;
    background-color: #ccc;
}

.buttonrefresh {
    font-size: 28rpx;
    color: #39a1db;
    text-align: center;
}

.current {
    background-color: #1aad19;
    font-size: 24rpx;
    color: #fff;
    border-radius: 8rpx;
    text-align: center;
    height: 44rpx;
    line-height: 44rpx;
    padding: 0 10rpx;
}