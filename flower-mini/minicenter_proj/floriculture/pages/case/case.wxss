page {
    background: #edeef0;
    padding-bottom: 100rpx;
}


/*已购方案*/

.buyedCase .title {
    padding: 30rpx 30rpx 30rpx 20rpx;
    font-size: 32rpx;
    color: #555;
    overflow: hidden;
    line-height: 30rpx;
}

.buyedCase .title text {
    float: left;
    border-left: 6rpx solid #3583DB;
    height: 30rpx;
    padding-left: 10rpx;
}

.buyedCase .title navigator {
    float: right;
    font-size: 28rpx;
    color: #888;
}

.buyedCase .title navigator image {
    width: 14rpx;
    height: 24rpx;
    vertical-align: middle;
    margin-left: 14rpx;
}

.buyedCase .list {
    padding: 0 5rpx;
    overflow: hidden;
    font-size: 0;
}

.buyedCase .list .item {
    width: 50%;
    display: inline-block;
    vertical-align: top;
    margin-bottom: 10rpx;
}

.buyedCase .list .item navigator {
    margin: 5rpx;
    box-sizing: border-box;
    background: #fff;
    display: block;
}

.buyedCase .list .item .box image,
.buyedCase .list .item .box video {
    width: 100%;
    height: 360rpx;
}

.buyedCase .list .item .hdTit {
    font-size: 26rpx;
    color: #555;
    padding: 20rpx 14rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}


/*热门方案*/

.caseList .item {
    padding: 0 30rpx;
    margin-bottom: 20rpx;
    background: #fff;
}

.caseList .item .name {
    font-size: 26rpx;
    color: #999;
    display: flex;
    line-height: 60rpx;
    padding: 20rpx 0;
}

.caseList .item .name image {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    -webkit-border-radius: 50%;
    vertical-align: top;
    margin-right: 20rpx;
}

.caseList .item .title {
    color: #333;
    font-size: 30rpx;
}

.caseList .item .picVideo {
    margin-top: 18rpx;
}

.caseList .item .picVideo image,
.caseList .item .picVideo video {
    width: 100%;
    height: 690rpx;
    vertical-align: top;
}

.caseList .item .msg {
    padding: 18rpx 0;
    overflow: hidden;
}

.caseList .item .attenPeople {
    float: left;
}

.caseList .item .attenPeople image {
    width: 44rpx;
    height: 44rpx;
    border-radius: 50%;
    -webkit-border-radius: 50%;
    float: left;
    margin-right: 8rpx;
}

.caseList .item .pariseBtn {
    float: left;
    margin-left: 8rpx;
    padding: 0 15rpx 0 24rpx;
    height: 40rpx;
    border: 2rpx solid #ddd;
    line-height: 40rpx;
    border-radius: 22rpx;
    font-size: 24rpx;
    color: #999;
    display: flex;
    align-items: center;
    justify-content: center;
}

.caseList .item .pariseBtn image {
    width: 26rpx;
    height: 28rpx;
    margin-right: 8rpx;
}

.caseList .item .saleNum {
    float: right;
    font-size: 24rpx;
    color: #999;
    line-height: 44rpx;
}


