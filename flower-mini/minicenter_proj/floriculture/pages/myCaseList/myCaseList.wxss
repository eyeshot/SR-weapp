/*编辑方案公共样式  */

.editCase-nav {
    height: 100rpx;
    padding: 0 50rpx;
    background: #3583DB;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.editCase-nav wx-view {
    text-align: center;
    position: relative;
    font-size: 28rpx;
    color: #fff;
    line-height: 100rpx;
    text-align: center;
    padding: 0 5rpx;
}

.editCase-nav wx-view.cur:before {
    content: "";
    position: absolute;
    left: 0;
    right: 0;
    width: 100%;
    height: 4rpx;
    background: #fff;
    border-radius: 4rpx;
    bottom: 10rpx;
}

.editCase-fix {
    position: fixed;
    width: 100%;
    left: 0;
    bottom: 0;
    height: 100rpx;
    display: flex;
    letter-spacing: 2rpx;
}

.editCase-fix view {
    flex: 1;
    line-height: 100rpx;
    font-size: 32rpx;
    color: #fff;
    text-align: center;
    background-image: linear-gradient(0deg, rgba(87, 176, 245, 1) 0%, rgba(41, 155, 245, 1) 100%);
}

.editCase-fix .pcPublic {
    background-image: linear-gradient(0deg, rgba(76, 105, 124, 1) 0%, rgba(60, 87, 105, 1) 100%);
}

.editCase-fix button {
    flex: 1;
    font-size: 32rpx;
    color: #fff;
    line-height: 100rpx;
    border-radius: 0;
}

.editCase-fix .submitBtn {
    background-image: linear-gradient(0deg, rgba(87, 176, 245, 1) 0%, rgba(41, 155, 245, 1) 100%);
}

.editCase-fix button::after {
    border: none;
}





