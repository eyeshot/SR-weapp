/*订购人信息*/

page {
    background-color: #f7f7f7;
}

.cotentbox {
    width: 750rpx;
    display: flex;
    justify-content: flex-start;
    flex-direction: column;
}

.toptitle {
    width: 480rpx;
    height: 200rpx;
    padding: 0 134rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
}

.centerline {
    position: absolute;
    left: 0;
    right: 0;
    top: 98rpx;
    height: 4rpx;
    width: 480rpx;
    margin: 0 auto;
    background-color: #f35e5e;
}

.contentcoulmebox {
    position: absolute;
    left: 30rpx;
    right: 30rpx;
    top: 0;
    margin: 0 auto;
    z-index: 2;
    width: 480rpx;
    height: 200rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.contentcoulmebox wx-view {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    border: 1px solid #f35e5e;
    text-align: center;
    color: #f35e5e;
    font-size: 28rpx;
    line-height: 38rpx;
    background-color: #f7f7f7;
    display: flex;
    justify-content: center;
    flex-direction: column;
}

.contentcoulmebox .contentcoulmeactive {
    background-color: #f35e5e;
    color: #fff;
}





