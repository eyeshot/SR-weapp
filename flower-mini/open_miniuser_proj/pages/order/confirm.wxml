<view class="container">
  
  <view class="top">
    <image src="/images/u170.jpg"/>
  </view>

      <view class="weui-panel weui-panel_access" style="margin-top:0px">
            <view class="weui-panel__bd">
                <view url="" class="weui-media-box weui-media-box_appmsg">
                    <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                        <image class="weui-media-box__thumb" src="/images/u170.jpg" />
                    </view>
                    <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                        <view class="weui-media-box__title">真爱永恒 - 永生玫瑰01</view>
                        <view class="weui-media-box__desc">￥599.00</view>
                    </view>
                </view>
               
            </view>
            <view class="weui-panel__ft">
                <view class="weui-cell weui-cell_link2">
                    <view class="weui-cell__bd">
                    <text>数量</text>
                    <view class="right">
                      <view bindtap="unplus">-</view>
                      <input class="num" value="{{num}}"/>
                      <view bindtap="plus">+</view>
                    </view>
                    </view>
                   
                </view>
            </view>
        </view>

        
         <view class="buy button">

          <view class="left">
            总价：<text>￥{{price}}</text>
          </view>
          <view class="right">
              <button class="weui-btn" type="primary" bindtap="gotobuy">立即购买</button>
          </view>
         
          </view>

  </view>