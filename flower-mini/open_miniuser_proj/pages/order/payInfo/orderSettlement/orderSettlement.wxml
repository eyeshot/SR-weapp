<!-- 订单结算 -->
<form bindsubmit="formSubmit">
    <view class="cotentbox">
        <view class="toptitle">
            <view class="centerline"></view>
            <view class="contentcoulmebox">
                <view class="contentcoulmeactive">
                    <text>订购人</text>
                    <text>信息</text>
                </view>
                <view class="contentcoulmeactive">
                    <text>收花人</text>
                    <text>信息</text>
                </view>
                <view class="contentcoulmeactive">
                    <text>订单</text>
                    <text>信息</text>
                </view>
            </view>
        </view>
        <view class="centercontenttitle">商品信息</view>
        <view class="centercontent">
            <view class="centercontentcolume  psfs topimageinfo">
                <view class="leftimag">
                    <image src="{{propic}}"></image>
                    <view class="imgname">
                        <text>{{title}}</text>
                        <text>￥{{price}}</text>
                    </view>
                </view>
            </view>
            <view class="centercontentcolume dgrname">
                <view>购买数量</view>
                <picker bindchange="bindNumChange" value="{{numIndex}}" range="{{numArry}}">
                    <input name="productnum" value="{{numArry[numIndex]}}" hidden />
                    <view class="picker">
                        {{numArry[numIndex]}}
                        <view class="arrow-right"></view>
                    </view>
                </picker>
            </view>
            <view class="centercontentcolume dgrname">
                <view>配送时间</view>
                <picker mode="date" placeholder="日期" bindchange="bindDateChange">
                    <input name="needsendtime" value="{{songdate}}" hidden />
                    <view class="picker">
                        {{songdate}}
                        <view class="arrow-right"></view>
                    </view>
                </picker>
            </view>

            <navigator url="{{is_useticket==1 ? '/pages/order/payInfo/clipCoupons/clipCoupons' : ''}}">
                <view class="centercontentcolume dgrname">
                    <view>优惠</view>
                    <view class="picker">
                        {{is_useticket==1 ? '使用优惠' : '当前产品无优惠'}}
                        <view class="arrow-right"></view>
                    </view>
                </view>
            </navigator>

            <view class="centercontentcolume dgrname" wx:if="{{isselftake=='0'}}">
                <view>配送费用</view>
                <input value="{{postage}}" name="postage" hidden />
                <view class="picker">
                    ￥{{postage}}
                </view>
            </view>
            <view class="centercontentcolume dgrname">
                <view>合计费用</view>
                <input value="{{totalprice}}" name="totalprice" hidden />
                <view class="picker">
                    ￥{{totalprice}}
                </view>
            </view>
        </view>
        <view class="beizhu">
            <view>买家备注</view>
            <input placeholder="若有其他需求请备注" name="note" value="" type="text " placeholder-style="custom-placeholder-style" placeholder-class="custom-placeholder-class" bindinput="" />
        </view>
        <view class="buy">
            <view class="left">
                总价：
                <text>￥{{totalprice}}</text>
            </view>
            <view class="right">
                <button class="weui-btn" formType="submit" type="primary" bindtap="gotobuy">微信支付</button>
            </view>
        </view>
    </view>
</form>