/**评价管理**/

page {
    background-color: #f7f7f7;
    width: 100%;
    height: 100%;
}

.contentbox {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    flex-direction: column;
    width: 690rpx;
    padding: 30rpx;
    background-color: #fff;
    color: #222;
    font-size: 30rpx;
    text-align: left;
}

.textarea {
    width: 690rpx;
    min-height: 300rpx;
}

.imguploadbox {
    width: 690rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    flex-wrap: wrap;
}

.imguploadbox wx-view {
    width: 160rpx;
    height: 160rpx;
    margin-bottom: 20rpx;
    position: relative;
}

.upload,
.img_upload {
    width: 160rpx;
    height: 160rpx;
}

.imgs {
    margin-right: 20rpx;
}

.imgsclose {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    right: -16rpx;
    top: -16rpx;
}

.save {
    margin: 30rpx auto;
    height: 88rpx;
    width: 690rpx;
    text-align: center;
    line-height: 88rpx;
    color: #ffffff;
    font-size: 34rpx;
    border-radius: 10rpx;
    background: linear-gradient(to right, #ff6a3e, #ff3932);
}