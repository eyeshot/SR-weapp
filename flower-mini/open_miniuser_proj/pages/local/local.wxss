.evaluatetext {
    width: 100%;
    font-size: 28rpx;
    color: #222222;
    line-height: 36rpx;
    margin: 30rpx 0;
    text-align: left;
}






/**/

.evaluateimgs {
    width: 100%;
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.evaluateimgs .evaluateimgmore {
    margin-left: 15rpx;
    width: 220rpx;
    height: 220rpx;
    margin-bottom: 15rpx;
    background-color: #eeeeee;
}

.evaluateimgs .evaluateimgmore:nth-of-type(1) {
    margin-left: 0;
}

.evaluateimgs .evaluateimg {
    width: 350rpx;
    height: 350rpx;
    margin-bottom: 15rpx;
    background-color: #eeeeee;
}





