<!--index.wxml-->
<view class="container">
    <!-- 门店图片 -->
    <view class="map" wx:if="{{list.showimg!=2}}">
        <image mode="aspectFill" src="{{cdnhost+list.background2}}" />
    </view>
    <!-- 门店视频 -->
    <view class="video" wx:if="{{list.showimg==2}}">
        <video src="{{cdnhost}}/{{video.fkey}}" controls page-gesture style="width:{{video.rate_w}}rpx;height:{{video.rate_h}}rpx"></video>
    </view>
    <!-- 店铺名 -->
    <view class="shoptitle">
        <view>{{list.name}}</view>
        <view class="gohome" bindtap="goHome">进店里逛逛</view>
    </view>
    <!-- 店铺信息 -->
    <view class="shopinfobox">
        <view class="shopinfo">
            <!-- 地址 -->
            <view class="address" bindtap="markertap">
                <view class="imgicon">
                    <image mode="widthFix" src="/images/v2.2.0/dingwei1.png" />
                </view>
                <view class="">{{list.address}}</view>
            </view>
            <view class="phonecall">
                <!-- 手机 -->
                <view class="phonec" bindtap="phonecall">
                    <image mode="widthFix" src="/images/v2.2.0/call.png" />
                </view>
                <!-- 客服 -->
                <button open-type="contact" session-from="weapp" class="contact">
                    <image mode="widthFix" src="/images/v2.2.0/kfwx.png" />
                </button>
            </view>
        </view>
    </view>
    <!-- 门店评价 -->
    <view class="mdpjbox">
        <view class="mdpjtitlebox">
            <view class="mdpjtitle">客户评价</view>
            <!-- <view class="gohome" bindtap="goHome">进店里逛逛</view> -->
        </view>
        <!-- 评价内容 -->
        <view class="evaluateContent">
            <!-- 评价人头像 -->
            <view class="evaluateheader">
                <view class="userinfo">
                    <image mode="scaleToFill" src="{{getComment.faceurl}}"></image>
                    <view class="username">{{getComment.nickname}}</view>
                </view>
                <view class="dianzan">
                    <image mode="scaleToFill" src="/images/v2.2.0/yizan.png" hidden="{{!getComment.hasup}}"></image>
                    <image mode="scaleToFill" src="/images/v2.2.0/zan.png" bindtap="up" data-commentid="{{getComment.id}}" hidden="{{getComment.hasup}}"></image>
                    <view class="zantext {{getComment.hasup?'':'nonezantext'}}">{{getComment.upnum}}</view>
                </view>
            </view>
            <view class="previewimage" data-openid="{{getComment.openid}}" data-id="{{getComment.id}}">
                <!-- 评价详情 -->
                <view class="evaluatetext">{{getComment.content}}</view>
                <!-- 评价图片 -->
                <view class="evaluateimgs">
                    <block wx:if="{{getComment.imgslist}}" wx:for="{{getComment.imgslist}}" wx:for-item="imgsitem">
                        <image mode="aspectFill" src="{{cdnhost+imgsitem}}" data-src="{{imgsitem}}" bindtap="preview" class="{{getComment.imgslist.length==1?'evaluateimg':'evaluateimgmore'}}"></image>
                    </block>
                </view>
                <!-- 掌柜回复 -->
                <view class="zghuifu" wx:if="{{getComment.reply.length>0}}">
                    <view class="zghuifutop"></view>
                    <view class="zghuifubottom">
                        <text class="zghf">掌柜回复：</text>
                        <text>{{getComment.reply}}</text>
                    </view>
                </view>
            </view>
        </view>
    </view>
</view>