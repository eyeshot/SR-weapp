/*使用优惠券*/

page,
.contnet {
    width: 100%;
    height: 100%;
    background-color: #f7f7f7;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    flex-direction: column;
}

.redbox {
    margin-top: 30rpx;
    background-color: #ef4f53;
    border-radius: 30rpx;
    width: 630rpx;
    min-height: 640rpx;
    box-shadow: 0 4rpx 32rpx 0 rgba(101, 19, 15, 0.51);
    overflow: hidden;
    position: relative;
}

.redbox .redboximg {
    width: 630rpx;
    height: 500rpx;
    overflow: hidden;
}

.redbox .redboximg wx-image {
    width: 630rpx;
    height: 640rpx;
}

.redbox .shopimg {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    overflow: hidden;
    display: flex;
    justify-content: center;
    background-color: #e7494d;
    border: 1px solid #ffdb6d;
    margin: 0 auto;
    align-items: center;
    position: absolute;
    left: 0;
    right: 0;
    top: 95rpx;
}

.redbox .shopimg wx-image {
    width: 100rpx;
    height: 100rpx;
}

.redbox .redboxtext,
.redboxnum,
.redboxmanjian,
.redboxtime {
    position: absolute;
    top: 233rpx;
    left: 0;
    right: 0;
    margin: 0 auto;
    font-size: 32rpx;
    line-height: 32rpx;
    color: #ffffff;
    text-align: center;
}

.redbox .redboxnum {
    top: 286rpx;
    font-size: 52rpx;
    line-height: 52rpx;
    color: #ffdb6d;
}

.redbox .redboxmanjian {
    top: 354rpx;
    font-size: 26rpx;
    line-height: 26rpx;
    color: #ffffff;
}

.redbox .redboxtime {
    top: 397rpx;
    font-size: 26rpx;
    line-height: 26rpx;
    color: #ffcfcd;
}

.redbox .renbtn {
    background-color: #ffdb6d;
    font-size: 30rpx;
    color: #6b1900;
    width: 560rpx;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    border-radius: 45rpx;
    border: 1px solid #ffdb6d;
    box-shadow: 0 4rpx 24rpx 0 rgba(101, 19, 15, 0.51);
    position: absolute;
    top: 487rpx;
    left: 0;
    right: 0;
    z-index: 2;
    margin: 0 auto;
}






