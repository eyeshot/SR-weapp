/*我的优惠券*/

page {
    background-color: #f7f7f7;
    width: 750rpx;
    height: 100%;
}

.content {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    flex-direction: column;
}

.couponsbox {
    flex: 1;
    margin-top: 30rpx;
    position: relative;
    width: 690rpx;
    height: 220rpx;
}

.yuan {
    width: 50rpx;
    height: 50rpx;
    background-color: #f7f7f7;
    border-radius: 50%;
    position: absolute;
    top: 95rpx;
    z-index: 10;
}

.yuan_left {
    left: -25rpx;
}

.yuan_right {
    right: -25rpx;
}

.coupon {
    position: relative;
    width: 690rpx;
    height: 220rpx;
    margin: 0 auto;
    background-color: #fff;
    border-radius: 16rpx;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    box-shadow: 0 0 10rpx 0 #e8e8e8;
}

.topline {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 6rpx;
    background-color: #e94747;
}

.topline_guoqi {
    background-color: #bdbdbd!important;
}


.couponcontent {
    width: 600rpx;
    height: 130rpx;
    padding: 0 45rpx;
    display: flex;
    justify-content: space-between;
    padding-top: 30rpx;
}

.couponcontent_left {
    color: #999999;
    font-size: 24rpx;
    line-height: 24rpx;
    display: flex;
    justify-content: flex-start;
    flex-direction: column;
}

.couponcontent_left wx-view:nth-of-type(1) {
    color: #e94747;
    font-size: 32rpx;
    line-height: 32rpx;
    margin-bottom: 20rpx;
}


.couponcontent_right {
    display: flex;
    justify-content: flex-start;
    flex-direction: column;
    font-size: 24rpx;
    line-height: 24rpx;
    color: #999999;
}

.couponcontent_right .coupon_money {
    color: #e94747;
    margin-bottom: 20rpx;
    display: flex;
    justify-content: flex-end;
    align-items: baseline;
}

.coupon_money wx-text:nth-of-type(1) {
    font-size: 28rpx;
    line-height: 28rpx;
}

.coupon_money wx-text:nth-of-type(2) {
    font-size: 52rpx;
    line-height: 52rpx;
    margin-left: 6rpx;
}



.couponbottom {
    height: 60rpx;
    width: 600rpx;
    padding: 0 45rpx;
    font-size: 22rpx;
    color: #bdbdbd;
    line-height: 60rpx;
    text-align: left;
    border-top: 1px dashed #dadada;
}

.guoqi {
    color: #bdbdbd!important;
}