/*tpl5.wxss*/

#tpl5 .weui-navbar {
    border: none;
}

.tplbox {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    flex-direction: column;
    padding: 0 10rpx;
}

.tplbox .tpllist {
    width:100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
}

.tplbox .tablist {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    flex-direction: column;
    margin-top: 20rpx;
    position: relative;
    background-color: #fff;
}

.tplbox .tablist .tablisttop {
    width: 360rpx;
    height: 360rpx;
}

.tplbox .tablistbottom {
    width: 336rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    flex-direction: column;
    padding: 0 12rpx;
}

.tplbox .sjimg {
    position: absolute;
    left: 0;
    top: 0;
    width: 68rpx;
    height: 68rpx;
}

