.tplbox .protitle {
    width: 100%;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    text-align: left;
    color: #555555;
    font-size: 26rpx;
    margin-top: 22rpx;
}

.tplbox .propricebox {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 13rpx;
}

.tplbox .proprice {
    font-size: 28rpx;
    color: #ff322f;
}

.tplbox .buybnt {
    margin: 0;
    padding: 0;
    width: 96rpx;
    height: 52rpx;
    border: 1px solid #ff322f;
    border-radius: 4rpx;
    overflow: hidden;
    background-color: #fff;
    color: #ff322f;
    font-size: 28rpx;
    text-align: center;
    line-height: 52rpx;
}

.tplbox .buybnt::after {
    -webkit-transform: scale(0);
    transform: scale(0);
}

