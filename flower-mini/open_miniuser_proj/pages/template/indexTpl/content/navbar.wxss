/*navbar.wxss*/

.navbarbox {
    width: 690rpx;
    padding: 0 30rpx;
    position: relative;
    background-color: #fff;
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #666;
    font-size: 28rpx;
    height: 90rpx;
    line-height: 90rpx;
    border-bottom:1rpx solid #e5e5e5;
}

.navbar_item_box {
    display: block;
    width: 100%;
    height: 90rpx;
    white-space: nowrap;
}

.navbar_item {
    margin-left: 50rpx;
}

.navbar_item_active {
    color: #ff322f;
    font-weight: bold;
}

.navbar_item_0{
    margin-left: 0;
}