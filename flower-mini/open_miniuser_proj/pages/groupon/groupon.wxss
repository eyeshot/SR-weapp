/*团购详情*/

.container {
    padding-bottom: 120rpx;
}

.proinfo {
    width: 750rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    flex-direction: column;
}

.proinfo-img {
    position: relative;
    width: 750rpx;
    height: 750rpx;
}

.proinfo-img wx-swiper,.proinfo-img .slide-image , .proinfo-img swiper-item{
    width: 750rpx;
    height: 750rpx;
}

.proinfo-img-text {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    height: 120rpx;
    width: 750rpx;
    background-color: rgba(255, 59, 50, 0.98);
    display: flex;
    justify-content: center;
    align-items: center;
}

.proinfo-img-text-content {
    width: 690rpx;
    padding: 0 30rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #ffffff;
}

.proinfo-img-text-content-left {
    font-size: 40rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.proinfo-img-text-content-left-te {
    font-size: 26rpx;
    margin-left: 10rpx;
    color: #feabae;
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
}

.proinfo-img-text-content-left-te:after {
    content: '';
    height: 2rpx;
    background-color: #feabae;
    position: absolute;
    left: 0;
    right: 0;
    top: 45%;
    z-index: 2;
}

.proinfo-img-text-top {
    position: absolute;
    left: 0;
    top: -44rpx;
    width: 120rpx;
    padding-left: 30rpx;
    height: 48rpx;
    background-color: rgba(255, 59, 50, 0.98);
    border-radius: 0 10rpx 0 0;
    font-size: 26rpx;
    color: #fff;
    text-align: left;
    line-height: 48rpx;
}

.proinfo-img-text-content-right {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    flex-direction: column;
    font-size: 22rpx;
}

.proinfo-img-text-content-right-bottom {
    display: flex;
    justify-content: flex-start;
    align-content: center;
}

.proinfo-img-time-num {
    color: #ff3b32;
    width: 34rpx;
    height: 34rpx;
    border-radius: 4rpx;
    background-color: #fff;
    text-align: center;
    line-height: 34rpx;
}

.proinfo-img-time-text {
    margin: 0 6rpx;
}




