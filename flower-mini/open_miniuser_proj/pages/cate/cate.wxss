page {
    width: 100%;
    height: 100%;
}

.classificationbox {
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
    width: 100%;
    height: 100%;
    border-top: 1px solid #e2e2e2;
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
}

.classification {
    width: 160rpx;
    overflow-x: hidden;
    height: 100%;
    background-color: #f4f4f4;
}

.classificationcontentbox {
    flex: 1;
    width: 590rpx;
    overflow-x: hidden;
    height: 100%;
    background-color: #ffffff;
    padding: 0 20rpx;
}

.classificationcontent {
    width: 100%;
    height: 200rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid #e5e5e5;
}

.classificationcontent .cicleft {
    width: 160rpx;
    height: 160rpx;
}

.classificationcontent .cicright {
    flex: 1;
    height: 120rpx;
    padding: 20rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-direction: column;
    text-align: left;
    font-size: 26rpx;
    color: #333333;
    overflow: hidden;
}

.cicright wx-view {
    width: 100%;
}

.contenttitle{
  max-width: 350rpx;
  max-height: 80rpx;
  overflow: hidden;
}

.contentprice {
    color: #ff322f;
}

.classname {
    width: 140rpx;
    min-height: 100rpx;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 26rpx;
    color: #666666;
    padding: 0 10rpx;
    border-bottom: 1px solid #e2e2e2;
}

.classname wx-view {
    max-width: 160rpx;
}

.classactive {
    color: #ff322f;
    background-color: #fff;
    font-size: 26rpx;
}